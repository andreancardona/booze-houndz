<h1><%= @liquor_store.name %></h1>


<%= @liquor_store.price %>
<p><%= @liquor_store.address1 %> <%= @liquor_store.address2 %></p>
<p><%= @liquor_store.city %>, <%= @liquor_store.state %> <%= @liquor_store.zip_code %></p>
<p><%= @liquor_store.display_phone %></p>

<br><br>
<h3>Reviews</h3>
<ul>
  <% @liquor_store.reviews.each do |r| %>
    <li><%= r.content %> | Rating: <%= r.rating %> stars</li>
      Review by <%= link_to r.user.name, r.user %>
  <% end %>
</ul>
<h4><%= link_to "Create a Review", reviews_new_path(liquor_store: @liquor_store), method: :post  %></h4>

<br>
<img src="<%= @liquor_store.image %>" alt="">


<br><br>
More Liquor Stores nearby: <%= link_to @liquor_store.neighborhood.name, @liquor_store.neighborhood %>
